            const submitBtn = document.getElementById('submitButton');
            const movieName = document.getElementById('titleValue');
            const movieYear = document.getElementById('yearValue');
            var moviePoster = document.getElementById('imageValue');
            var movieDescription = document.getElementById('descriptionValue');


        movieName.onkeyup = function() {
            movieSearch = movieName.value;
        };

        movieYear.onkeyup = function () {
            yearSearch = movieYear.value;
